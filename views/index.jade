doctype html
head
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/css/normalize.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/css/foundation.min.css')
    link(rel='stylesheet', href='/css/lookup.css')
    title DCSS LookupDB




body
    .row
        .columns.small-12
            .text-center
                h1 Lookup DB


    #learndb-view
        .row
            .columns.small-12
                form#lookup-form
                    .row.collapse
                        .columns.small-11
                            input.lookup(type='text', name='lookup', placeholder='Lookup...')
                        .columns.small-1
                            button.button.postfix(type='submit') Go
        .row
            .columns.small-12
                .spinner
                    .bounce1
                    .bounce2
                    .bounce3

        .row
            .columns.small-12
                h4.query-name
                p.learndb-monster
                h4 Learn DB Results
                p.learndb-results
                h4 Search results
                p.learndb-search
        
        #stats
            .row
                .columns.small-12.text-center
                    h5 <span id="counter"></span> searches and counting
            .row
                .columns.small-12
                    h5 Most popular searches
                    ol#popular
            
        .row.footer
            .columns.small-12.text-center
                p <a href="https://github.com/guyht/lookup" target="_blank">Bugs, Issues, Development</a> | <a href="http://crawl.develz.org/wordpress/" target="_blank">Crawl home page</a>




    //- Scripts
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/js/foundation.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/backbone.stickit/0.8.0/backbone.stickit.min.js')
    script(type='text/javascript', src='/socket.io/socket.io.js')
    script(type='text/javascript', src='/js/lookup.js')
